{% extends 'base.html.twig' %}

{% block title %}
    All programs
{% endblock %}

{% block body %}
    <h1>All shows in the table programs</h1>
    <div class="row">
        {% for program in programs %}
            <div class="col-4 d-flex mb-3">
                <div class="card">
                    <div class="card-header text-light bg-dark">
                        <strong><a href="#">{{ loop.index }} / {{ program.title }}</a></strong>
                        <p>{{ program.category.name }}</p>
                    </div>
                    <img class="card-img-top" src="{{ program.poster }}" alt="{{ program.title }} poster">
                    <div class="card-body">
                        <p>{{ program.summary }}</p>
                    </div>
                </div>
            </div>
        {% else %}
            Shows not found
        {% endfor %}
    </div>
    <a href="{{ path('app_index') }}" class="btn btn-secondary">
        Back to home
    </a>
{% endblock %}