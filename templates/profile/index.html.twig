{% extends 'base.html.twig' %}

{% block title %}My profile{% endblock %}

{% block body %}
    <h3>My profile</h3>
    <div class="row mt-5">
        <div class="col">
            <p>E-mail :</p>
            <p><strong>{{ user.email }}</strong></p>
        </div>

        <div class="col">
            <p>Roles :</p>
            <ul>
                {% for role in user.roles %}
                    <li><strong>{{ role }}</strong></li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <div>
        <a class="btn btn-sm btn-outline-secondary float-right" href="#">Edit</a>
    </div>
{% endblock %}
